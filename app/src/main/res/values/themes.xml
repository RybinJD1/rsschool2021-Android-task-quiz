<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Quiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.Quiz.First" parent="Theme.Quiz">
        <item name="colorPrimary">@color/deep_purple_100_light</item>
        <item name="colorPrimaryDark">@color/cyan_100</item>
        <item name="colorPrimaryVariant">@color/deep_purple_100</item>
        <item name="colorSecondary">@android:color/holo_green_light</item>
        <item name="colorSecondaryVariant">@android:color/holo_blue_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/holo_purple</item>
    </style>

    <style name="Theme.Quiz.Second" parent="Theme.Quiz">
        <item name="colorPrimary">@android:color/holo_blue_bright</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryVariant">@android:color/holo_blue_light</item>
        <item name="colorSecondary">@color/cyan_100_light</item>
        <item name="colorSecondaryVariant">@color/cyan_100_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cyan_100</item>
    </style>

    <style name="Theme.Quiz.Three" parent="Theme.Quiz">
        <item name="colorPrimary">@color/light_green_100</item>
        <item name="colorPrimaryDark">@color/light_green_100_dark</item>
        <item name="colorPrimaryVariant">@android:color/holo_orange_light</item>
        <item name="colorSecondary">@color/light_green_100</item>
        <item name="colorSecondaryVariant">@android:color/holo_red_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cyan_100_dark</item>
    </style>

    <style name="Theme.Quiz.Four" parent="Theme.Quiz">
        <item name="colorPrimary">@color/deep_purple_100</item>
        <item name="colorPrimaryDark">@color/deep_purple_100_dark</item>
        <item name="colorPrimaryVariant">@android:color/holo_orange_dark</item>
        <item name="colorSecondary">@android:color/darker_gray</item>
        <item name="colorSecondaryVariant">@color/deep_purple_100_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/holo_purple</item>
    </style>

    <style name="Theme.Quiz.Five" parent="Theme.Quiz">
        <item name="colorPrimary">@color/light_green_100_dark</item>
        <item name="colorPrimaryDark">@color/light_green_100</item>
        <item name="colorPrimaryVariant">@color/light_green_100_dark</item>
        <item name="colorSecondary">@color/cyan_100</item>
        <item name="colorSecondaryVariant">@color/yellow_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_green_100_dark</item>
    </style>
</resources>
